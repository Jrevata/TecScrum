<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="13dp"
    android:layout_marginEnd="13dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:focusable="true"
    android:elevation="20dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_card_comment"
        android:padding="10dp" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageview_photo_comment"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="17dp"
            android:layout_gravity="center_horizontal"

            android:background="@drawable/ic_profile_menu"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textview_fullname_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jordan Revata Cuela"
                android:fontFamily="@font/lato"
                android:textColor="@color/Black"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textview_date_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#8492A6"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:text="01/08/2019  12:23"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textview_message_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textStyle="normal"
                android:text="Greyhound divisively hello coldly wonderfully
marginally far upon excluding."/>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>